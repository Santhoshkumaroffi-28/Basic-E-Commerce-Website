    <script>
        let cart = [];
        let total = 0;

        function addToCart(name, price) {
            cart.push(name + " - ₹" + price);
            total += price;
            updateCart();
        }

        function updateCart() {
            let list = document.getElementById("cartList");
            list.innerHTML = "";

            cart.forEach(function(item){
                let li = document.createElement("li");
                li.innerText = item;
                list.appendChild(li);
            });

            document.getElementById("totalAmount").innerText = total;
        }

        // SHOW CHECKOUT PAGE
        function openCheckout() {
            if(cart.length === 0) {
                alert("Your cart is empty!");
                return;
            }
            document.getElementById("checkoutBox").style.display = "block";
        }

        // PLACE ORDER
        function placeOrder() {
            let name = document.getElementById("chkName").value;
            let address = document.getElementById("chkAddress").value;
            let phone = document.getElementById("chkPhone").value;

            if(name === "" || address === "" || phone === "") {
                document.getElementById("orderMsg").style.color = "red";
                document.getElementById("orderMsg").innerText = "All fields are required!";
                return;
            }

            document.getElementById("orderMsg").style.color = "green";
            document.getElementById("orderMsg").innerText = "Order Placed Successfully!";
        }

        // LOGIN VALIDATION
        function validateLogin() {
            let email = document.getElementById("loginEmail").value;
            let pass = document.getElementById("loginPass").value;

            if(email === "" || pass === "") {
                document.getElementById("loginError").innerText = "All fields are required!";
                return;
            }

            if(!email.includes("@")) {
                document.getElementById("loginError").innerText = "Invalid email format!";
                return;
            }

            document.getElementById("loginError").innerText = "Login Successful!";
        }

        function validateRegister() {
            let name = document.getElementById("regName").value;
            let email = document.getElementById("regEmail").value;
            let pass = document.getElementById("regPass").value;
            let pass2 = document.getElementById("regPass2").value;

            if(name === "" || email === "" || pass === "" || pass2 === "") {
                document.getElementById("regError").innerText = "All fields must be filled!";
                return;
            }

            if(pass.length < 6) {
                document.getElementById("regError").innerText = "Password must be at least 6 characters!";
                return;
            }

            if(pass !== pass2) {
                document.getElementById("regError").innerText = "Passwords do not match!";
                return;
            }

            document.getElementById("regError").innerText = "Registration Successful!";
        }

    </script>

